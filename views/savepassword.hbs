<body id="homepage" style="background-color: black">
<div class="margo"><h1 style="color: white; margin: 0 auto; margin-bottom: 15px; width: 500px">Send E-mail to Reset Password</h1>
    <div class="pw_box">

        <form id="formformform" action="/savepassword" method = post>

            <input type="hidden" name="resettoken" placeholder="Username" class="input__field" id="input-1" value={{ rtoken }} required/>
            <label class="inputPass">PASSWORD:</label> </br> <input type="password" name="password"  class="input__field inputPass" id="password" required/></br>
            <label class="inputPass"> CONFIRM PASSWORD:</label> </br><input type="password" name="password2" class="input__field inputPass" id="password2" required/></br>
            <button id="send-button" class="bootn ghost" type="submit">Reset<i class="fa fa-angle-double-right"></i></button>
        </form>

    </div>
</div>


<script>
jQuery.validator.setDefaults({
  debug: true,
  success: "valid"
});
$('#formformform').validate({
  rules: {
    password: "required",
    password2: {
      equalTo: "#password"
    },
  },
  submitHandler: function(form) {
            console.log("submitted");
             form.submit();
        },
    messages: {
        password2: {
                required: "Confirm Password Field Is Required.",
                equalTo: "Please Enter The Same Password Values."
            },
             password: {
                required: "Password Field Is Required.      "
            }
    }

});
</script>
